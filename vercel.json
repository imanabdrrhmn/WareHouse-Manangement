{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)", 
      "dest": "/routes/Auth.js"
    },
    {
      "src": "/users/(.*)",
      "dest": "/routes/users.js"
    },
    {
      "src": "/products/(.*)",
      "dest": "/routes/products.js"
    },
    {
      "src": "/files/(.*)",
      "dest": "/routes/files.js"
    },
    {
      "src": "/orders/(.*)",
      "dest": "/routes/orders.js"
    },
    {
      "src": "/inventory/(.*)",
      "dest": "/routes/inventory.js"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "functions": {
    "routes/Auth.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "routes/users.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "routes/products.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "routes/files.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "routes/orders.js": {
      "memory": 256,
      "maxDuration": 10
    },
    "routes/inventory.js": {
      "memory": 256,
      "maxDuration": 10
    }
  }
}
